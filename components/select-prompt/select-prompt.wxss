.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0rpx 0rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  font-size: 26rpx;
  font-weight: 450;
}

