/* pages/hall/hall.wxss */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 0rpx;
  box-sizing: border-box;
  background-color: #F7F7F7;
  font-size: 26rpx;
  font-weight: 450;
}

.listBox {
  width: 94%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.itemBox {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: top;
  justify-content: space-around;
  box-sizing: border-box;
  margin-top: 20rpx;
  background-color: white;
  border-radius: 10rpx;
}

.markBox {
  width: 120rpx;
  height: 100%;
  padding-top:24rpx;  
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  box-sizing: border-box;
}

.markBox .mark { 
  font-size: 22rpx;
  font-weight: 250;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: #C0002A;
  color: white;
  text-align: center;
  line-height: 100rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
 
.middleBox {
  width: 56%;
}

.middleBox .name {
  margin: 20rpx 20rpx 10rpx 10rpx;
}

.middleBox .title {
  margin: 10rpx 20rpx 20rpx 10rpx;
}

.middleBox .image {
  margin-bottom: 20rpx;
  width: 94%;
}

.rightBox {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  width: 180rpx; 
}

.rightBox .time {
  width: 100%; 
  margin-top: 30rpx;
}

.rightBox .rbBox {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  box-sizing: border-box; 
  margin: 30rpx 0rpx;
}

.rbBox .upbtImg {
  width: 40rpx;
  height: 40rpx;
}

.rbBox .messageImg {
  width: 40rpx;
  height: 40rpx;
  margin: 0rpx 30rpx;
}
 
.imageBox {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.addImg {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  width: 160rpx;
  height: 80rpx;
}