/* pages/assessment/assessment.wxss */ 
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 0rpx;
  box-sizing: border-box;
  background-color: #F7F7F7;
  font-size: 26rpx;
  font-weight: 450;
}

.cellBox { 
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between; 
  box-sizing: border-box; 
  width: 92%;
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx 30rpx;
  margin: 20rpx 30rpx 0rpx 30rpx;
}

.cellBox .image {
  width: 50%;  
}

.cellBox .textBox {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-evenly; 
  box-sizing: border-box; 
  margin: 20rpx 20rpx;
}

.textBox .title {
  margin-bottom: 20rpx;
}

.textBox .button {
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500; 
  color: white;
  background-color: #9D9D9D;
}